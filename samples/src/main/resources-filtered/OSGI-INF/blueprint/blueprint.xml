<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
                               http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <!-- Gain access to files available in bundles through CPF IReadAccess -->
  <service interface="org.pentaho.ctools.cpf.repository.bundle.IBundleReadAccess">
    <bean class="org.pentaho.ctools.cpf.repository.bundle.ReadAccess">
      <property name="bundle" ref="blueprintBundle"/>
      <property name="userContent" value="true"/>
    </bean>
  </service>

</blueprint>
